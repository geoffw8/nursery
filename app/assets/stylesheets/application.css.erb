 html {
 	background: url('<%= asset_path("rainbow_bg.jpg") %>') no-repeat fixed;
 	background-position:center bottom;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-color: #fffde2;
 }

body {
	font-family:"lucida grande",tahoma,verdana,arial,sans-serif;
	font-size: 15px;
	line-height: 20px;
	margin: 0;
}

#logo {
	width: 200px;
	margin: 0 auto;
}

header, footer {
	width: 1000px;
	margin: 0 auto 35px;
	text-align: center;
}

#swoosh {
	height: 55px;
	display: block;
 	background: url('<%= asset_path("swoosh.jpg") %>') no-repeat center center;
}

footer {
	margin-top: 30px;
}

h1 {
	font-size: 22px;
	font-family: 'Margarine', cursive;
	line-height: 35px;
	margin-top: 0;
	padding-top: 0;
}

h2 {
	font-size: 18px;
	font-family: 'Margarine', cursive;
	line-height: 35px;
	margin-top: 0;
	padding-top: 0;
}

#page_container {
	width: 1000px;
	margin: 30px auto;
	padding: 30px;
	border-radius: 20px;
	background-color: #FFF;

}

#page {
	width: 980px;
	clear: both;
}

#nav {
	width: 180px;
	float: left;
	margin: 0 10px 0 0;
}

#menu ul {
	margin: 0;
	padding: 0;
}

#menu li {
	width: 120px;
	height: 25px;
	margin: 0 0 10px;
	padding: 5px;
	position: relative;
	font-size: 15px;
	list-style: none;
	border-radius: 10px;
	transform:rotate(-2deg);
	-ms-transform:rotate(-2deg); /* IE 9 */
	-moz-transform:rotate(-2deg); /* Firefox */
	-webkit-transform:rotate(-2deg); /* Safari and Chrome */
	-o-transform:rotate(-2deg); /* Opera */
}

#menu li:hover {
	transform:rotate(1deg);
	-ms-transform:rotate(1deg); /* IE 9 */
	-moz-transform:rotate(1deg); /* Firefox */
	-webkit-transform:rotate(1deg); /* Safari and Chrome */
	-o-transform:rotate(1deg); /* Opera */
}

#menu li a {
	width: 100%;
	height: 100%;
	padding: 7px;
	font-family: 'Margarine', cursive;
	text-decoration: none;
	color: #FFF;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
}

li.home {background-color: #ee001d;}
li.about {background-color: #ee9200;}
li.policies {background-color: #9ec100;}
li.nursery {background-color: #ffe800;}
li.daily-routine {background-color: #009ddf;}
li.settling-in {background-color: #e207f6;}
li.contact-us {background-color: #7e00ff;}

#body_content {
	width: 500px;
	float: left;
}

#side_body_content {
	width: 235px;
	float: right;
}